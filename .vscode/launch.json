{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "runtimeArgs": [
                "${workspaceFolder}/index.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug via nodemon",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "${workspaceFolder}/index.js"
            ]
        }
    ]
}