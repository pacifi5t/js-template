{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "no-unused-vars": [
      "off"
    ]
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**"
  ]
}